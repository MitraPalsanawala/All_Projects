            <script type="text/javascript">

                $(".select2dropdown").select2();

                function CancelFunction() {
                    window.location.href = "/ExceptionReport";
                }

                $("#startdate").datepicker({
                    clearBtn: true,
                    todayHighlight: true,
                    endDate: new Date(),
                    orientation: "bottom"
                }).datepicker("setDate", 'now').on('changeDate', function (e) {
                    $(this).datepicker('hide');
                    var selectedDate = new Date(e.date);
                    $("#enddate").datepicker("setStartDate", selectedDate);
                    $("#enddate").datepicker("setDate", selectedDate);
                });


                $("#enddate").datepicker({
                    clearBtn: true,
                    todayHighlight: true,
                    startDate: new Date(),
                    endDate: new Date(),
                    orientation: "bottom"
                }).datepicker("setDate", 'now').on('changeDate', function (e) {
                    $(this).datepicker('hide');
                });

                $("#tblReport").DataTable({
                    "lengthChange": true,
                    lengthMenu: [10, 20, 30],
                });

                $('#btnSearchSubmit').on('click', function () {
                    var stdt = $("#startdate").val().toString().split('-');
                    var endt = $("#enddate").val().toString().split('-');
                    var startDate = new Date(stdt[2] + "-" + stdt[1] + "-" + stdt[0]);
                    var endDate = new Date(endt[2] + "-" + endt[1] + "-" + endt[0]);
                    var diff = new Date(endDate - startDate);

                    var days = diff / 1000 / 60 / 60 / 24;

                    if (days <= 31) {
                        $('#btnSearchSubmit').submit();
                    } else {
                        Swal.fire({
                            title: '',
                            text: 'Difference between dates should be less than 31',
                            type: 'error',
                            icon: 'error',
                            showCancelButton: false,
                            showConfirmButton: false,
                            iconColor: '#03449e',
                            timer: 3000
                        })
                        return false;
                    }
                });


                function changeDropdown() {
                    $("#cfaorgid").val('').change();
                    $("#custorgid").val('').change();
                    $(".select2dropdown").select2();
                    if (this.value == 'CFA') {
                        $("#divCFA").show();
                        $("#divCustomer").hide();
                    } else if (this.value == 'Customer') {
                        $("#divCFA").hide();
                        $("#divCustomer").show();
                    } else {
                        $("#divCFA").hide();
                        $("#divCustomer").hide();
                    }
                }

                $(document).ready(function () {
                    $('#MenuType').on('change', changeDropdown);
                    // $('#searchbtn').on('change', changeDropdown);
                });


                function divhideShowFilterDetail(data) {
                    if ($(data).find('.fa-plus').length > 0) {
                        $("#divFilter").css("display", "block");
                        $(data).find('.fa-plus').addClass('fa-minus')
                        $(data).find('.fa-plus').removeClass('fa-plus')

                    }
                    else {
                        $("#divFilter").css("display", "none");
                        $(data).find('.fa-minus').addClass('fa-plus')
                        $(data).find('.fa-minus').removeClass('fa-minus')

                    }
                    $(".select2dropdown").select2();
                }

                var SearchData = JSON.parse('<%- JSON.stringify(SearchData) %>');
                if (SearchData) {
                    $("#cfaorgid").val(SearchData.cfa_org_id).change();
                    $("#custorgid").val(SearchData.cust_org_id).change();
                    $("#startdate").val(SearchData.startdate).change();
                    $("#enddate").datepicker("setStartDate", SearchData.startdate);
                    $("#enddate").val(SearchData.enddate).change();
                    $("#order_status").val(SearchData.order_status).change();
                    if (SearchData.cfa_org_id) {
                        $("#divCFA").show();
                        $("#MenuType").val('CFA');
                        // $("#divCustomer").val();
                        // $("#divCustomer").hide();
                    } else if (SearchData.cust_org_id) {
                        $("#divCustomer").show();
                        $("#MenuType").val('Customer')
                        // $("#divCFA").val();
                        // $("#divCFA").hide();
                    } else {
                        $("#divCFA").show();
                        $("#divCustomer").hide();
                    }
                } else {
                    $("#cfaorgid").val();
                    $("#custorgid").val();
                    $("#startdate").val();
                    $("#enddate").val();
                    $("#order_status").val();
                }

                var FilterData = JSON.parse('<%- JSON.stringify(FilterData) %>');
                searchStatus = FilterData;
                if (searchStatus == true) {
                    $("#divFilter").css("display", "block");
                    $(".select2dropdown").select2();
                    // $('#MenuType').on('change', changeDropdown);
                }
            </script>