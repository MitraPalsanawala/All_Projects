            <script type="text/javascript">
                $(".select2dropdown").select2();

                $('document').ready(function () {
                    $('textarea').each(function () {
                        $(this).val($(this).val().trim());
                    }
                    );
                });

                function CancelFunction() {
                    window.location.href = "/Product";
                }

                // var dropdown = document.getElementById('DropDownPlantID').value;

                // $("#PlantID").val($("#DropDownPlantID").val());

                $("#DropDownPlantID").change(function () {
                    // alert($('option:selected', this).text());
                    $("#PlantID").val($("#DropDownPlantID").val())
                });


                function divhideShowFilterDetail(data) {
                    if ($(data).find('.fa-plus').length > 0) {
                        $("#divFilter").css("display", "block");
                        $(data).find('.fa-plus').addClass('fa-minus')
                        $(data).find('.fa-plus').removeClass('fa-plus')
                    }
                    else {
                        $("#divFilter").css("display", "none");
                        $(data).find('.fa-minus').addClass('fa-plus')
                        $(data).find('.fa-minus').removeClass('fa-minus')
                    }
                    $(".select2dropdown").select2();
                }


                function divAddProductDetail(data) {
                    if ($(data).find('.fa-plus').length > 0) {
                        $("#divAddProduct").css("display", "block");
                        $(data).find('.fa-plus').addClass('fa-minus')
                        $(data).find('.fa-plus').removeClass('fa-plus')
                    }
                    else {
                        $("#divAddProduct").css("display", "none");
                        $(data).find('.fa-minus').addClass('fa-plus')
                        $(data).find('.fa-minus').removeClass('fa-minus')
                    }
                    $(".select2dropdown").select2();
                }

                var SearchData = JSON.parse('<%- JSON.stringify(SearchData) %>');
                if (SearchData) {
                    $("#productID").val(SearchData.id).change();
                }
                else {
                    $("#productID").val();
                }


                var FilterData = JSON.parse('<%- JSON.stringify(FilterData) %>');
                searchStatus = FilterData;
                if (searchStatus == true) {
                    $("#divFilter").css("display", "block");
                    $(".select2dropdown").select2();
                }

                var FetchData = JSON.parse(`<%- JSON.stringify(FetchData).replace(/[\n\r\t]/g, '').replace(/\\/g, '\\\\').replace(/"/g, '\\"').replace(/'/g, "\\'") %>`);
                if (FetchData) {
                    $("#divAddProduct").css("display", "block");
                    $(".select2dropdown").select2();
                }

                $("#tblproduct").DataTable({
                    "lengthChange": true,
                    lengthMenu: [5, 10, 20],
                });
                $("#frmProduct").validate({
                    debug: false,
                    errorElement: 'span',
                    invalidHandler: function (event, validator) {
                        if (validator.numberOfInvalids() > 0) {
                            event.preventDefault();
                        }
                    },
                    onkeyup: false,
                    messages: {
                        product_name: {
                            required: "Please Enter Product Name"
                        },
                        gst: {
                            required: "Please Enter GST"
                        },
                        hsn_code: {
                            required: "Please Enter HSN Code"
                        }
                    },
                    rules: {
                        product_name: {
                            required: true,
                        },
                        gst: {
                            required: true,
                        },
                        hsn_code: {
                            required: true
                        }
                    },

                    errorPlacement: function (error, element) {
                        if (element.parent('.input-group').length) {
                            error.insertAfter(element.parent());
                        } else if (element.hasClass('select2')) {
                            error.insertAfter(element.next('span'));
                        } else if ($(element).parent().hasClass('multiselect-native-select')) {
                            error.insertAfter($(element).parent());
                        } else {
                            error.insertAfter(element);
                        }
                    },
                    submitHandler: function (form, event) {
                        event.preventDefault();
                    }
                });

                function ValidateCustomData() {
                    if (ValidateProductName()) {
                        return true;
                    }
                    else {
                        return false;
                    }
                }

                function ValidateProductName() {
                    var data = JSON.stringify({
                        'product_name': $("#product_name").val(),
                        'id': $("#id").val(),
                    });
                    $.ajax({
                        accepts: "application/json",
                        async: false,
                        type: "POST",
                        contentType: 'application/json',
                        url: "/CheckProductName",
                        data: data,
                        success: function (res) {
                            if (res.Message == "true") {
                                returndata = true;
                                $("#spanProductNameAlreadyExist").css("display", "none");
                            }
                            else {
                                returndata = false;
                                $("#spanProductNameAlreadyExist").css("display", "block");
                            }
                        },
                        error: function (xhr, status, error) {
                            return false;
                            $("#spanProductNameAlreadyExist").css("display", "block");
                        }
                    });

                    return returndata;
                }

                var error = JSON.parse('<%- JSON.stringify(alertTitle) %>');
                var error1 = JSON.parse('<%- JSON.stringify(alertMessage) %>');
                var errortype;
                var icon = "";
                if (error) {
                    if (error == "Invalid") {
                        errortype = 'warning'
                        icon = "error"
                    } else if (error == "Success") {
                        errortype = 'success'
                        icon = "success"
                    } else if (error == "Delete") {
                        errortype = 'success'
                        icon = "success"
                    }
                    Swal.fire({
                        title: error,
                        text: error1,
                        //type: errortype,
                        icon: errortype,
                        showCancelButton: false,
                        showConfirmButton: false,
                        iconColor: '#03449e',
                        // toast: false,
                        // modal: true,
                        //position: 'relative',
                        timer: 3000
                    }).then(function () {
                        if (error == "Success" || error == "Delete" || error == "Invalid") { window.location.replace(window.location.origin + '/Product') }
                        else if (error == "Invalid" && ID != '') {
                            window.location.replace(window.location.origin + '/Product/' + ID)
                        }
                    });
                }

            </script>