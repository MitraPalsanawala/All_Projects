            <script type="text/javascript">

                $('document').ready(function () {
                    $('textarea').each(function () {
                        $(this).val($(this).val().trim());
                    }
                    );
                });

                function CancelFunction() {
                    window.location.href = "/UserAdd";
                }

                function ViewFunction() {
                    window.location.href = "/UserView";
                }

                $("#DropDownPlantID").change(function () {
                    // alert($('option:selected', this).text());
                    $("#PlantID").val($("#DropDownPlantID").val())
                });

                $(".select2dropdown").select2();

                function bindCity(stateDetail) {
                    let stateName = $("#ddlState").val();
                    $.ajax({
                        url: '/bindCityData/' + stateName, success: function (res) {
                            if (res.CityData.length > 0) {
                                $("#ddlCity").empty();
                                $("#ddlCity").append($("<option></option>").val("").html('----------Select City----------'));
                                $.each(res.CityData, function (data, value) {
                                    $("#ddlCity").append($("<option></option>").val(value).html(value));
                                });

                                //$('#ddlCity').trigger("change");
                                //$('#divDesignation').css("display", "block");
                            } else {
                                $("#ddlCity").empty();
                                $("#ddlCity").append($("<option></option>").val("").html('----------Select City----------'));
                            }
                        }
                    });
                }

                $("#frmUser").validate({
                    debug: false,
                    errorElement: 'span',
                    invalidHandler: function (event, validator) {
                        if (validator.numberOfInvalids() > 0) {
                            event.preventDefault();
                        }
                    },
                    onkeyup: false,
                    messages: {
                        username: {
                            required: "Please Enter User Name"
                        },
                        password: {
                            required: "Please Enter Password"
                        },
                        name: {
                            required: "Please Enter Name"
                        },
                        number: {
                            required: "Please Enter MobileNo"
                        },
                        pincode: {
                            required: "Please Enter Pincode"
                        },
                        ddlState: {
                            required: "Please Select State"
                        }
                    },
                    rules: {
                        username: {
                            required: true,
                        },
                        password: {
                            required: true,
                        },
                        name: {
                            required: true
                        },
                        number: {
                            required: true,
                            minlength: 10,
                            maxlength: 10,
                            number: true
                        },
                        pincode: {
                            minlength: 6,
                            maxlength: 6,
                            number: true,
                            required: true
                        },
                        ddlState: {
                            required: true
                        }
                    },
                    errorPlacement: function (error, element) {
                        if (element.parent('.input-group').length) {
                            error.insertAfter(element.parent());
                        } else if (element.hasClass('select2')) {
                            error.insertAfter(element.next('span'));
                        } else if ($(element).parent().hasClass('multiselect-native-select')) {
                            error.insertAfter($(element).parent());
                        } else {
                            error.insertAfter(element);
                        }
                    },
                    submitHandler: function (form, event) {
                        event.preventDefault();
                    }
                });

                function ValidateCustomData() {
                    if (ValidateUserName()) {
                        return true;
                    }
                    else {
                        return false;
                    }
                }

                function ValidateUserName() {
                    var data = JSON.stringify({
                        'username': $("#username").val(),
                        'id': $("#id").val(),
                    });
                    $.ajax({
                        accepts: "application/json",
                        async: false,
                        type: "POST",
                        contentType: 'application/json',
                        url: "/CheckUserName",
                        data: data,
                        success: function (res) {
                            if (res.Message == "true") {
                                returndata = true;
                                $("#spanUserNameAlreadyExist").css("display", "none");
                            }
                            else {
                                returndata = false;
                                $("#spanUserNameAlreadyExist").css("display", "block");
                            }
                        },
                        error: function (xhr, status, error) {
                            return false;
                            $("#spanUserNameAlreadyExist").css("display", "block");
                        }
                    });

                    return returndata;
                }

                var error = JSON.parse('<%- JSON.stringify(alertTitle) %>');
                var error1 = JSON.parse('<%- JSON.stringify(alertMessage) %>');
                var errortype;
                var icon = "";
                if (error) {
                    if (error == "Invalid") {
                        errortype = 'warning'
                        icon = "error"
                    } else if (error == "Success") {
                        errortype = 'success'
                        icon = "success"
                    } else if (error == "Delete") {
                        errortype = 'success'
                        icon = "success"
                    }
                    Swal.fire({
                        title: error,
                        text: error1,
                        //type: errortype,
                        icon: errortype,
                        showCancelButton: false,
                        showConfirmButton: false,
                        iconColor: '#03449e',
                        // toast: false,
                        // modal: true,
                        //position: 'relative',
                        timer: 3000
                    }).then(function () {
                        if (error == "Success" || error == "Delete" || error == "Invalid") { window.location.replace(window.location.origin + '/UserView') }
                        else if (error == "Invalid" && ID != '') {
                            window.location.replace(window.location.origin + '/UserAdd/' + ID)
                        }
                    });
                }
            </script>