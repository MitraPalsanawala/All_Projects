                if (FetchData) {
                    $("#divAddCfaOrg").css("display", "block");
                    $(".select2dropdown").select2();
                }

                $("#DropDownPlantID").change(function () {
                    // alert($('option:selected', this).text());
                    $("#PlantID").val($("#DropDownPlantID").val())
                });

                $("#frmStationmaster").validate({
                    debug: false,
                    errorElement: 'span',
                    invalidHandler: function (event, validator) {
                        if (validator.numberOfInvalids() > 0) {
                            event.preventDefault();
                        }
                    },
                    onkeyup: false,
                    messages: {
                        name: {
                            required: "Please Enter Station Name"
                        },
                        code: {
                            required: "Please Enter Station Code"
                        },
                        state_id: {
                            required: "Please Select State"
                        },
                        // address: {
                        //     required: "Please Enter Address"
                        // }

                    },
                    rules: {
                        name: {
                            required: true,
                        },
                        code: {
                            required: true,
                        },
                        state_id: {
                            required: true
                        },
                        // address: {
                        //     required: true
                        // }
                    },
                    errorPlacement: function (error, element) {
                        if (element.parent('.input-group').length) {
                            error.insertAfter(element.parent());
                        } else if (element.hasClass('select2dropdown')) {
                            error.insertAfter(element.next('span'));
                        } else if ($(element).parent().hasClass('multiselect-native-select')) {
                            error.insertAfter($(element).parent());
                        } else {
                            error.insertAfter(element);
                        }
                    },
                    submitHandler: function (form, event) {
                        event.preventDefault();
                    }
                });

                function ValidateCustomData() {
                    if (ValidateStationCode()) {
                        return true;
                    }
                    else {
                        return false;
                    }
                }

                function ValidateStationCode() {
                    var data = JSON.stringify({
                        'code': $("#code").val(),
                        'id': $("#id").val(),
                    });
                    $.ajax({
                        accepts: "application/json",
                        async: false,
                        type: "POST",
                        contentType: 'application/json',
                        url: "/CheckStationCode",
                        data: data,
                        success: function (res) {
                            if (res.Message == "true") {
                                //if (!res.data) {
                                returndata = true;
                                $("#spancodeAlreadyExist").css("display", "none");
                            }
                            else {
                                returndata = false;
                                $("#spancodeAlreadyExist").css("display", "block");
                            }
                        },
                        error: function (xhr, status, error) {
                            return false;
                            $("#spancodeAlreadyExist").css("display", "block");
                        }
                    });
                    return returndata;
                }

                var error = JSON.parse('<%- JSON.stringify(alertTitle) %>');
                var error1 = JSON.parse('<%- JSON.stringify(alertMessage) %>');
                var errortype;
                var icon = "";
                if (error) {
                    if (error == "Invalid") {
                        errortype = 'warning'
                        icon = "error"
                    } else if (error == "Success") {
                        errortype = 'success'
                        icon = "success"
                    } else if (error == "Delete") {
                        errortype = 'success'
                        icon = "success"
                    }
                    Swal.fire({
                        title: error,
                        text: error1,
                        //type: errortype,
                        icon: errortype,
                        showCancelButton: false,
                        showConfirmButton: false,
                        iconColor: '#03449e',
                        // toast: false,
                        // modal: true,
                        //position: 'relative',
                        timer: 3000
                    }).then(function () {
                        if (error == "Success" || error == "Delete" || error == "Invalid") { window.location.replace(window.location.origin + '/StationMaster') }
                        else if (error == "Invalid" && ID != '') {
                            window.location.replace(window.location.origin + '/StationMaster/' + ID)
                        }
                    });
                }

