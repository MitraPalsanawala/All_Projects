            <script type="text/javascript">
                let currentData = [];
                let searchStatus, data;

                $('document').ready(function () {
                    $('textarea').each(function () {
                        $(this).val($(this).val().trim());
                    }
                    );
                });

                $(document).ready(function () {
                    currentData = JSON.parse(`<%- JSON.stringify(StationMasterData).replace(/[\n\r\t]/g, '').replace(/\\/g, '\\\\').replace(/"/g, '\\"').replace(/'/g, "\\'") %>`)
                    $("#tblStationMaster").DataTable({
                        "lengthChange": true,
                        lengthMenu: [100, 200, 300, 400, 500],
                    });
                });

                $('#tblStationMaster').on('length.dt', function (e, settings, len) {
                    // Call your API here with the new length
                    console.log("API call with new length: " + len);
                    callData("PageChange");
                });

                function callPrevData() {
                    var currentPage = $('#tblStationMaster').DataTable().page.info().page;

                    if (currentPage == 0) {

                    } else {
                        // Update the page number to the next page
                        var nextPage = currentPage - 1;

                        // Move to the next page
                        $('#tblStationMaster').DataTable().page(nextPage).draw(false);
                    }
                }

                function callData(control) {
                    if (currentData.length > 0) {
                        var lastElement = currentData[currentData.length - 1].id;
                        var PageLength = $('#tblStationMaster').DataTable().page.len();

                        if (control.innerHTML == "Next") {
                            var currentPage = $('#tblStationMaster').DataTable().page.info().page;
                            var start = $('#tblStationMaster').DataTable().page.info().start;
                            console.log("start", start)
                            var isAPICall = (start + PageLength) < currentData.length

                            if (!isAPICall) {
                                $('#tblStationMaster').addClass('blur');
                                $('#loader').css("display", "inline-block");

                                if (searchStatus == 'true') {
                                    data = JSON.stringify({
                                        lastElement: lastElement,
                                        PageLength: PageLength
                                    });
                                } else {
                                    data = JSON.stringify({
                                        lastElement: lastElement,
                                        PageLength: PageLength
                                    });
                                }

                                $.ajax({
                                    type: "POST",
                                    contentType: 'application/json',
                                    url: '/BindStationDetail',
                                    data: data,
                                    success: function (data) {
                                        if (data != null) {
                                            if (data.length > 0) {
                                                currentData = currentData.concat(data);
                                                // console.log('AFTER:', currentPage + 1, currentData.length)
                                                $('#tblStationMaster').DataTable().clear().draw(); // clear existing data from the table
                                                jQuery.each(currentData, function (i, itemData) {
                                                    $('#tblStationMaster').DataTable().row.add([
                                                        i + 1,
                                                        itemData.name,
                                                        itemData.code,
                                                        (itemData.state_data ? itemData.state_data[0].state_name : '-'),
                                                        itemData.address,
                                                        ('<a href="/FindByIDStationDetail/' + (itemData.id) + '"><i class="la la-pencil-square-o" style="font-size:24px;color: #03449e;"></i></a>'),

                                                        ('<a href="/DeleteStationDetail/' + (itemData.id) + '"><i class="la la-trash-o" style="font-size:24px;color: #03449e;" onclick="return confirm(`Are you sure you want to Delete ?`)"></i></a>')
                                                    ]);
                                                });

                                                // apply a class to the second column of the table
                                                $('#tblStationMaster').DataTable().column(0).nodes().to$().addClass('tdcss');
                                                $('#tblStationMaster').DataTable().column(3).nodes().to$().addClass('tdcss');

                                                $('#tblStationMaster').DataTable().draw();
                                                // Update the page number to the next page
                                                var nextPage = currentPage + 1;
                                                // Move to the next page
                                                $('#tblStationMaster').DataTable().page(nextPage).draw(false);
                                            }
                                        }
                                    }
                                });

                                // Hide the spinner icon after the data has been loaded
                                $('#tblStationMaster').removeClass('blur');
                                $('#loader').hide();

                            } else {
                                // Update the page number to the next page
                                var nextPage = currentPage + 1;
                                // Move to the next page
                                $('#tblStationMaster').DataTable().page(nextPage).draw(false);
                            }

                        } else {
                            // Show the spinner icon before making the AJAX request
                            // $('#loader').show();
                            $('#tblStationMaster').addClass('blur');
                            $('#loader').css("display", "inline-block");

                            if (searchStatus == 'true') {
                                data = JSON.stringify({
                                    lastElement: null,
                                    PageLength: PageLength
                                });
                            } else {
                                data = JSON.stringify({
                                    lastElement: null,
                                    PageLength: PageLength
                                });
                            }

                            $.ajax({
                                type: "POST",
                                contentType: 'application/json',
                                url: '/BindStationDetail',
                                data: data,
                                success: function (data) {
                                    if (data != null) {
                                        if (data.length > 0) {
                                            currentData = data;
                                            $('#tblStationMaster').DataTable().clear().draw(); // clear existing data from the table
                                            jQuery.each(currentData, function (i, itemData) {
                                                $('#tblStationMaster').DataTable().row.add([
                                                    i + 1,
                                                    itemData.name,
                                                    itemData.code,
                                                    (itemData.state_data ? itemData.state_data[0].state_name : '-'),
                                                    itemData.address,
                                                    ('<a href="/FindByIDStationDetail/' + (itemData.id) + '"><i class="la la-pencil-square-o" style="font-size:24px;color: #03449e;"></i></a>'),

                                                    ('<a href="/DeleteStationDetail/' + (itemData.id) + '"><i class="la la-trash-o" style="font-size:24px;color: #03449e;" onclick="return confirm(+ Are you sure you want to Delete ? +)"></i></a>')
                                                ]);
                                            });

                                            // apply a class to the second column of the table
                                            $('#tblStationMaster').DataTable().column(0).nodes().to$().addClass('tdcss');
                                            $('#tblStationMaster').DataTable().column(3).nodes().to$().addClass('tdcss');

                                            $('#tblStationMaster').DataTable().draw();
                                        }
                                    }
                                }, complete: function () {
                                    // Hide the loader
                                    $('#tblStationMaster').removeClass('blur');
                                    $('#loader').hide();
                                }
                            });
                        }
                    }
                }

                function CancelFunction() {
                    window.location.href = "/StationMaster";
                }

                function divAddCfaOrgDetail(data) {
                    if ($(data).find('.fa-plus').length > 0) {
                        $("#divAddCfaOrg").css("display", "block");
                        $(data).find('.fa-plus').addClass('fa-minus')
                        $(data).find('.fa-plus').removeClass('fa-plus')
                    }
                    else {
                        $("#divAddCfaOrg").css("display", "none");
                        $(data).find('.fa-minus').addClass('fa-plus')
                        $(data).find('.fa-minus').removeClass('fa-minus')
                    }

                    $(".select2dropdown").select2();
                }

